<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration>
        
  <appender name="Console" class="org.apache.log4j.ConsoleAppender">
     <param name="Target" value="System.err"/> 
     <layout class="org.apache.log4j.PatternLayout">
        <param name="ConversionPattern" value="%d %-5p {%t} %c%n %m%n"/>
     </layout>
  </appender>

  <!-- TODO: fix deadlock in PBDSReplicator -->
  <!-- until then TRACE level debugging needs to be on to avoid deadlock  -->
  <category name="org.speechforge.cairo.server.rtp.PBDSReplicator">
    <priority value="trace"/>
  </category>

  <root>
    <priority value="debug"/>
    <appender-ref ref="Console"/>
  </root>

</log4j:configuration>